<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="StandardTextBlock">
        <Setter Property="Foreground" Value="{StaticResource StandardText}" />
        <Setter Property="FontFamily" Value="Century Gothic" />
    </Style>
    <Style TargetType="TextBlock" x:Key="TBK_WindowTitle" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="TBK_ItemsControlHeader" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="TBK_FieldLabel" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="0 4 0 0" />
        <Setter Property="Width" Value="120" />
    </Style>
    <Style TargetType="TextBlock" x:Key="TBK_ActiveCardHeader" BasedOn="{StaticResource StandardTextBlock}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="16" />
    </Style>

</ResourceDictionary>